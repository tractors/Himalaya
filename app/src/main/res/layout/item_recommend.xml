<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/shape_album_item_bg">
    
    <com.will.himalaya.wiget.RoundRectImageView
        android:id="@+id/album_cover"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album_cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/album_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="拿破仑·希尔《成功学全书》"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/album_description_tv"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:text="为你开启成功之路，给你指向未来！一起行动"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#ff848484"
            android:textSize="12sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/play_info_icon" />
                <TextView
                    android:id="@+id/album_play_count"
                    android:layout_marginLeft="2dp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="234.5万"
                    android:ellipsize="end"
                    android:textColor="#ff848484"
                    android:textSize="7sp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound" />
                <TextView
                    android:id="@+id/album_content_size"
                    android:layout_marginLeft="2dp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="23集"
                    android:ellipsize="end"
                    android:textColor="#ff848484"
                    android:textSize="7sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>